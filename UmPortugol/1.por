programa
{
	funcao inicio() 
	{
		inteiro num = 1
		
		real numero, media, soma = 0.0

		escreva("Informe 5 números\n")
		
		enquanto(num <= 5) 
		{
			
			escreva("\nDigite o ", num, "º número: ")
			leia(numero)
			
			soma = soma + numero  	// A variavel soma é o acumulador deste exemplo
			num = num + 1  // Incrementa o contador
		}
		
		media = soma / 5
		
		
		escreva("\nA média dos 5 números é: ", media, "\n")
	}
}

